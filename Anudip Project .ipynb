import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns


#1 Let's read data
dataframe = pd.read_csv(r'C:\Users\adils\Desktop\ADIL SHA S\DreamyDestinity\zomato_data.csv')



print(dataframe.head())


#2 Basic Information/Summary


dataframe.info()


#3 Removing missing values


print(dataframe.isnull().sum())


#4 Exploring Restaurant Types


sns.countplot(x=dataframe['listed_in(type)'])
plt.xlabel("Type of restaurant")


#5 Online Order Availability


sns.countplot(x=dataframe['online_order'])


#6 Identify the Most Popular Restaurant


max_votes = dataframe['votes'].max()
restaurant_with_max_votes = dataframe.loc[dataframe['votes'] == max_votes, 'name']

print('Restaurant(s) with the maximum votes:')
print(restaurant_with_max_votes)


#7 Votes by Restaurant Type


grouped_data = dataframe.groupby('listed_in(type)')['votes'].sum()
result = pd.DataFrame({'votes': grouped_data})
plt.plot(result, c='green', marker='o')
plt.xlabel('Type of restaurant', c='red', size=20)
plt.ylabel('Votes', c='red', size=20)
sns.countplot(x=dataframe['online_order'])


#8 Analyzing tables booked


plt.hist(dataframe['book_table'],bins=5)
plt.title('Bookings Confirmed Distribution')
plt.show()


#9 Approximate cost for two people


couple_data=dataframe['approx_cost(for two people)']
sns.countplot(x=couple_data)


#10 Votes vs Ratings


plt.figure(figsize=(6,5))
plt.scatter(dataframe['votes'], dataframe['rate'], color='red')
plt.title("Votes vs Rating")
plt.xlabel("Votes")
plt.ylabel("Rating")
plt.show()



#11 Ratings for online orders


plt.figure(figsize = (6,6))
sns.boxplot(x = 'online_order', y = 'rate', data = dataframe)


